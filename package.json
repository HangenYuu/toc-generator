{
  "name": "@technote-space/toc-generator",
  "version": "4.1.5",
  "description": "GitHub Action to generate TOC.",
  "keywords": [
    "github",
    "github actions",
    "toc"
  ],
  "homepage": "https://github.com/technote-space/toc-generator",
  "bugs": {
    "url": "https://github.com/technote-space/toc-generator/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/technote-space/toc-generator.git"
  },
  "license": "MIT",
  "author": {
    "name": "Technote",
    "email": "technote.space@gmail.com",
    "url": "https://technote.space"
  },
  "files": [
    "lib",
    "action.yml"
  ],
  "scripts": {
    "build": "tsc",
    "cover": "jest --coverage",
    "postinstall": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/husky ] || husky install",
    "lint": "eslint 'src/**/*.ts' '__tests__/**/*.ts' --cache",
    "lint:fix": "eslint --fix 'src/**/*.ts' '__tests__/**/*.ts'",
    "prepublishOnly": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/pinst ] || pinst --disable",
    "postpublish": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/pinst ] || pinst --enable",
    "release": "yarn release-ga --test",
    "test": "yarn lint && yarn cover",
    "update": "npm_config_yes=true npx npm-check-updates -u --timeout 100000 && yarn install && yarn upgrade && yarn audit"
  },
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@technote-space/doctoc": "^2.4.16",
    "@technote-space/github-action-helper": "^5.2.21",
    "@technote-space/github-action-log-helper": "^0.1.40",
    "@technote-space/github-action-pr-helper": "^2.2.11",
    "fast-glob": "^3.2.7"
  },
  "devDependencies": {
    "@actions/github": "^5.0.0",
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@technote-space/github-action-test-helper": "^0.7.27",
    "@technote-space/release-github-actions-cli": "^1.8.7",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.1.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-circus": "^27.3.1",
    "lint-staged": "^11.2.6",
    "nock": "^13.1.4",
    "pinst": "^2.1.6",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
